<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dữ liệu trong tháng: "
            android:textSize="23sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mm"
            android:textSize="23sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bill"
            android:padding="8dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_invoice"
                    android:background="@drawable/bg_icon_profile"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/td_hoaDon"
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số đơn hàng"/>
                <TextView
                    android:id="@+id/txt_hoaDon_month"
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="18dp"
                    android:layout_below="@id/td_hoaDon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đơn"
                    android:fontFamily="@font/allfont_medium"
                    android:layout_toRightOf="@id/txt_hoaDon_month"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/td_hoaDon"
                    android:textSize="18dp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aqua"
            android:padding="8dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_money"
                    android:background="@drawable/bg_icon_profile"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/td_doanhThu"
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doanh thu"/>
                <TextView
                    android:id="@+id/txt_doanhThu_month"
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="18dp"
                    android:layout_below="@id/td_doanhThu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000.000.000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VNĐ"
                    android:fontFamily="@font/allfont_medium"
                    android:layout_toRightOf="@id/txt_doanhThu_month"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/td_doanhThu"
                    android:textSize="18dp"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>